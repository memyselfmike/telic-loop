---
export interface Props {
  title: string;
  slug: string;
  date: string;
  excerpt?: string;
  categories?: Array<{ title: string; slug: string }>;
  imageUrl?: string;
  imageAlt?: string;
}

const {
  title,
  slug,
  date,
  excerpt,
  categories = [],
  imageUrl,
  imageAlt = '',
} = Astro.props;

// Format date for display
const displayDate = new Date(date).toLocaleDateString('en-GB', {
  day: 'numeric',
  month: 'long',
  year: 'numeric',
});
---

<article class="bg-white rounded-xl border border-slate-200 shadow-sm overflow-hidden hover:shadow-md transition-shadow flex flex-col">
  <!-- Featured image -->
  <a href={`/blog/${slug}`} class="block aspect-video bg-slate-100 overflow-hidden" tabindex="-1" aria-hidden="true">
    {imageUrl ? (
      <img
        src={imageUrl}
        alt={imageAlt}
        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
        loading="lazy"
        decoding="async"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-primary-50 to-primary-100">
        <svg class="w-12 h-12 text-primary-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    )}
  </a>

  <!-- Card body -->
  <div class="p-5 flex flex-col flex-1">
    <!-- Category badges -->
    {categories.length > 0 && (
      <div class="flex flex-wrap gap-1.5 mb-3">
        {categories.slice(0, 3).map((cat) => (
          <a
            href={`/blog/category/${cat.slug}`}
            class="inline-block px-2 py-0.5 bg-primary-50 text-primary-700 text-xs font-medium rounded-full border border-primary-200 hover:bg-primary-100 transition-colors"
          >
            {cat.title}
          </a>
        ))}
      </div>
    )}

    <!-- Title -->
    <h2 class="text-base font-semibold text-slate-900 mb-2 leading-snug">
      <a href={`/blog/${slug}`} class="hover:text-primary-700 transition-colors">
        {title}
      </a>
    </h2>

    <!-- Excerpt -->
    {excerpt && (
      <p class="text-sm text-slate-500 leading-relaxed line-clamp-2 flex-1 mb-3">
        {excerpt}
      </p>
    )}

    <!-- Date + read more -->
    <div class="flex items-center justify-between mt-auto pt-3 border-t border-slate-100">
      <time datetime={date} class="text-xs text-slate-400">
        {displayDate}
      </time>
      <a
        href={`/blog/${slug}`}
        class="text-xs font-medium text-primary-600 hover:text-primary-800 transition-colors"
      >
        Read more â†’
      </a>
    </div>
  </div>
</article>
