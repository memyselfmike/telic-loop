---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Button } from '../components/ui/button';
import { Card, CardHeader, CardTitle, CardDescription, CardContent, CardFooter } from '../components/ui/card';
import { Badge } from '../components/ui/badge';
import { Separator } from '../components/ui/separator';
import { Input } from '../components/ui/input';
import { Textarea } from '../components/ui/textarea';
import { Label } from '../components/ui/label';
---

<BaseLayout title="UI Components Test â€” Beep2B" description="Blue B2B theme component test page">
  <main class="max-w-4xl mx-auto px-4 py-12 space-y-12">
    <h1 class="text-3xl font-bold text-[var(--foreground)]">UI Component Library</h1>
    <p class="text-[var(--muted-foreground)]">shadcn/ui components with blue B2B theme (primary: #1e40af)</p>

    <Separator />

    <!-- Buttons -->
    <section class="space-y-4">
      <h2 class="text-xl font-semibold">Buttons</h2>
      <div class="flex flex-wrap gap-3">
        <Button client:load>Default (Blue)</Button>
        <Button client:load variant="outline">Outline</Button>
        <Button client:load variant="secondary">Secondary</Button>
        <Button client:load variant="ghost">Ghost</Button>
        <Button client:load variant="link">Link</Button>
        <Button client:load variant="destructive">Destructive</Button>
      </div>
      <div class="flex flex-wrap gap-3">
        <Button client:load size="sm">Small</Button>
        <Button client:load size="default">Default</Button>
        <Button client:load size="lg">Large</Button>
        <Button client:load disabled>Disabled</Button>
      </div>
    </section>

    <Separator />

    <!-- Cards -->
    <section class="space-y-4">
      <h2 class="text-xl font-semibold">Cards</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <Card client:load>
          <CardHeader>
            <CardTitle>B2B Lead Generation</CardTitle>
            <CardDescription>Consistent LinkedIn leads using the BEEP methodology</CardDescription>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-[var(--muted-foreground)]">
              Generate high-quality prospects without cold calls or unpredictable results.
              500+ businesses in 22 countries trust Beep2B.
            </p>
          </CardContent>
          <CardFooter>
            <Button client:load size="sm">Get Started</Button>
          </CardFooter>
        </Card>

        <Card client:load>
          <CardHeader>
            <CardTitle>Feature Card</CardTitle>
            <CardDescription>With badge and separator</CardDescription>
          </CardHeader>
          <CardContent class="space-y-3">
            <div class="flex gap-2">
              <Badge client:load>B2B</Badge>
              <Badge client:load variant="secondary">LinkedIn</Badge>
              <Badge client:load variant="outline">BEEP</Badge>
            </div>
            <Separator />
            <p class="text-sm">
              Blue primary color (#1e40af) applied via CSS custom properties.
            </p>
          </CardContent>
        </Card>
      </div>
    </section>

    <Separator />

    <!-- Form Elements -->
    <section class="space-y-4">
      <h2 class="text-xl font-semibold">Form Elements</h2>
      <div class="max-w-md space-y-4">
        <div class="space-y-2">
          <Label htmlFor="name">Full Name</Label>
          <Input id="name" placeholder="Enter your name" />
        </div>
        <div class="space-y-2">
          <Label htmlFor="email">Email</Label>
          <Input id="email" type="email" placeholder="you@company.com" />
        </div>
        <div class="space-y-2">
          <Label htmlFor="message">Message</Label>
          <Textarea id="message" placeholder="How can Beep2B help you?" />
        </div>
        <Button client:load class="w-full">Submit</Button>
      </div>
    </section>
  </main>
</BaseLayout>
